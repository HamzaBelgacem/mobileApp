<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:foregroundTint="#774343"
    tools:context=".Convertor">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        android:editable="false"
        android:fontFamily="@font/black_han_sans"
        android:inputType="none"
        android:text='Convertor'
        android:textAlignment="center"
        android:textColor="#A1C5CCCD"
        android:textColorHighlight="#AE3F3F3F"
        android:textColorLink="#FAFAFA"
        android:textSize="34sp"
        android:textStyle="bold"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/C2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:ems="10"
        android:hint=""
        android:minHeight="48dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#B0F7FBFB"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/n1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="271dp"
        android:ems="10"
        android:hint=""
        android:inputType="phone"
        android:minHeight="48dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#B0F7FBFB"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="379dp"
        android:ems="10"
        android:gravity="center"
        android:orientation="horizontal"

        android:textAlignment="center">

        <Button

            android:id="@+id/b2"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:backgroundTint="#018796"
            android:text="USD"
            android:textColor="#D0C6D4D3" />

        <Button
            android:id="@+id/b3"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="EUR"
            android:backgroundTint="#018796"
            android:textColor="#D0C6D4D3" />

        <Button
            android:id="@+id/b1"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="CAN"
            android:backgroundTint="#018796"
            android:textColor="#D0C6D4D3" />
    </LinearLayout>

</RelativeLayout>